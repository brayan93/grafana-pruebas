extends layout


block content
    h1.text-info #{title}
    .row
        .col-12
            form(action="/influx/form", method="post")
                .input-group
                    label(for="topic")
                    input.form-control(type="text" name="topic" placeholder="Tema")
                .input-group
                    label(for="latitude")
                    input.form-control(type="text" name="latitude" placeholder="Latitud")
                .input-group
                    input.btn.btn-success(type="submit" value="Agregar")