extends layout


block content
    h1.text-info #{title}
    .row
        .col-12
            form(action="/speed/form", method="post")
                .input-group
                    label(for="speed")
                    input.form-control(type="text" name="speed" placeholder="Velocidad")
                .input-group
                    input.btn.btn-success(type="submit" value="Agregar")