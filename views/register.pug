extends layout


block content
    h1.text-info #{title}
    .row
        .col-12
            table.table
                if registers
                    if registers.length > 0
                        tr
                            th Logitud
                            th Latitud
                            th host
                        each reg in registers
                            tr
                                td #{reg.longitude}
                                td #{reg.latitude}
                                td #{reg.host}
                    else
                        tr
                            td No se encontraron registros
                else
                    tr
                        td No se encontraron registros
        .col-12
            .btn-group
                a(href="/") Regresar