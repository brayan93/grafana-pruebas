extends layout


block content
    h1.text-info #{title}
    .row
        .col-12
            table.table
                if registers
                    if registers.length > 0
                        tr
                            th Estado
                        each reg in registers
                            tr
                                td #{reg.status}
                    else
                        tr
                            td No se encontraron registros
                else
                    tr
                        td No se encontraron registros
        .col-12
            .btn-group
                a.btn.btn-warning(href="/") Regresar
                a.btn.btn-info(href="/ledStatus/form") Nuevo Registro